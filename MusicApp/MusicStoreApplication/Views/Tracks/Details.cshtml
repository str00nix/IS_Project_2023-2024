@model MusicStoreApplication.Domain.Domain.Track

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Track</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genres)
        </dt>
        <dd class = "col-sm-10">
            @(String.Join(", ", Model.Genres.Select(gt => gt.Genre.Name)))
        </dd>
        <dt class = "col-sm-2">
            Album
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Album != null)
            {
				@Model.Album.Name
            }
            else
            {
                <span>None</span>    
            }
        </dd>
        <dt class = "col-sm-2">
            Artists
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Artists != null && Model.Artists.Count() > 0)
            {
                int index = 1; 
                int length = Model.Artists.Count();
                @foreach(var artist in Model.Artists.Select(at => at.Artist))
                {
                    @artist.Name
                    @if (index != length)
                    {
						 <span>,&nbsp</span>
                    }
                    index++;
                }

            }
            else
            {
                <span>None</span>    
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
